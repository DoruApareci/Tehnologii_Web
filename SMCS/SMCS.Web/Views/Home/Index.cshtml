@{
    ViewBag.Title = "Home Page";
}

<div class="content-wrapper">
    <h1>Succes</h1>
    <div style="position:fixed; bottom:0; right:0;">
        <img id="pokemon" alt="mascota" />
        <div id="text"></div>
    </div>
    <script>
        const image = document.getElementById("pokemon");
        const text = document.getElementById("text");

        //pokemon image
        //random nr from 001 to 1008 in format with min 3 digits
        const randomNr = Math.floor(Math.random() * 1008).toString().padStart(3, "0");
        image.src = "https://assets.pokemon.com/assets/cms2/img/pokedex/full/" + randomNr.toString() + ".png";


        let rot = 0;
        //animation XD
        let interval = setInterval(function () {
            rot += 0.1;
            image.style.transform = "rotate(" + Math.sin(rot) + "deg)";
        }, 10);

        //pokemon message

        const message = "Salutare Salutare, eu sunt un pokemon";
        let i = 0;
        const speed = 50;

        function typeWriter() {
            if (i < message.length) {
                text.innerHTML += message.charAt(i);
                i++;
                setTimeout(typeWriter, speed);
            }
        }

        function deleteText() {
            if (text.innerHTML.length > 0) {
                text.innerHTML = text.innerHTML.slice(0, -1);
                setTimeout(deleteText, speed);
            } else {
                i = 0;
                setTimeout(typeWriter, speed);
            }
        }

        function startAnimation() {
            if (text.innerHTML == message) {
                deleteText();
            } else {
                typeWriter();
            }
        }

        setInterval(startAnimation, 3000);

    </script>
</div>
